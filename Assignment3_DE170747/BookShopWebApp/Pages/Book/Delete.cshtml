@page "{id:int}"
@model BookShopWebApp.Pages.DeleteBookModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1 class="text-center my-4">Delete Book</h1>

<div class="container text-center">
    <p>Are you sure you want to delete this book?</p>

    <div class="mb-2">
        <strong>Title:</strong> @Model.Book.BookName
    </div>
    <div class="mb-2">
        <strong>Category ID:</strong> @Model.Book.CategoryId
    </div>
    <div class="mb-2">
        <strong>Price:</strong> @Model.Book.Price
    </div>

    <form method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-page="./Books" class="btn btn-secondary ms-2">Cancel</a>
</div>
