@page "{id:int}"
@model BookShopWebApp.Pages.DeleteUserModel
@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-center my-4">Delete User</h1>

<div class="container">
    <p class="text-danger">Are you sure you want to delete this user?</p>

    <div class="mb-3">
        <strong>Username:</strong> @Model.User.UserName
    </div>
    <div class="mb-3">
        <strong>Password:</strong> @Model.User.Password
    </div>

    <form method="post" class="d-flex justify-content-start">
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-page="./Users" class="btn btn-secondary">Cancel</a>
    </form>
</div>
