@page
@model BookShopWebApp.Pages.UsersModel
@{
    ViewData["Title"] = "Users";
}

<h1 class="text-center my-4">Users</h1>
<div class="container mb-4 text-end">
    <a asp-page="./Add" class="btn btn-primary">Add User</a>
</div>

<!-- Danh sách người dùng -->
<h2 class="mb-3">List of Users</h2>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null && Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Password</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No users available.</td>
            </tr>
        }
    </tbody>
</table>
