@page
@model BookShopWebApp.Pages.AddCategoryModel
@{
    ViewData["Title"] = "Add Category";
}

<h1 class="text-center my-4">Add New Category</h1>

<form method="post" class="container">
    <div class="mb-3">
        <label asp-for="NewCategory.CategoryName" class="form-label">Name:</label>
        <input asp-for="NewCategory.CategoryName" class="form-control" required />
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Add Category</button>
    </div>
</form>
