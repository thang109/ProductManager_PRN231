@page "{id:int}"
@model BookShopWebApp.Pages.DeleteCategoryModel
@{
    ViewData["Title"] = "Delete Category";
}

<h1 class="text-center my-4">Delete Category</h1>

<div class="container text-center">
    <p>Are you sure you want to delete this category?</p>

    <div class="mb-2">
        <strong>Name:</strong> @Model.Category.CategoryName
    </div>

    <form method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-page="./Categories" class="btn btn-secondary ms-2">Cancel</a>
</div>
