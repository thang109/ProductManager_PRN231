@page
@model Assignment2.Pages.Account.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<h2 class="text-center">Sign Up</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Account.Email"></label>
                <input asp-for="Account.Email" class="form-control" />
                <span asp-validation-for="Account.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.CompanyName"></label>
                <input asp-for="Account.CompanyName" class="form-control" />
                <span asp-validation-for="Account.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.City"></label>
                <input asp-for="Account.City" class="form-control" />
                <span asp-validation-for="Account.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Country"></label>
                <input asp-for="Account.Country" class="form-control" />
                <span asp-validation-for="Account.Country" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Account.Password"></label>
                <input asp-for="Account.Password" class="form-control" type="password" />
                <span asp-validation-for="Account.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.ConfirmPassword"></label>
                <input asp-for="Account.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="Account.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">@Model.ErrorMessage</span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
