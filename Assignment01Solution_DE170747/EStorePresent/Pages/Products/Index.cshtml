@page
@model Assignment2.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product List";
}
<a asp-page="/Products/AddProduct">Add Product</a>
<h1>Product List</h1>

@if (Model.Products == null || Model.Products.Count == 0)
{
    <p>No products available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Weight</th>
                <th>Stock</th>
                <th>Actions</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice.Value.ToString("N0") VND</td>
                    <td>@product.Weight kg</td>
                    <td>@product.UnitInStock</td>
                    <td>
                        <a asp-page="/Products/Details" asp-route-id="@product.ProductId">Details</a> |                        
                        <form method="post" asp-page-handler="Delete" asp-route-id="@product.ProductId" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <button type="submit" class="btn btn-link">Delete</button>
                        </form>
                    </td>
                    <td>@product.</td>
                </tr>
            }
        </tbody>
    </table>
}
